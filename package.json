{
  "name": "@cerner/carbon-graphs",
  "version": "0.0.0",
  "description": "A graphing library built using d3 based on Cerner design standards",
  "keywords": [
    "carbon",
    "carbon-graphs",
    "d3",
    "d3-module",
    "graphs",
    "graphing"
  ],
  "main": "lib/js/carbon-graphs.js",
  "homepage": "https://pages.github.com/cerner/carbon-graphs/",
  "repository": {
    "type": "git",
    "url": "https://github.com/cerner/carbon-graphs.git"
  },
  "author": "Cerner Corporation",
  "license": "Apache-2.0",
  "bugs": "https://github.com/cerner/carbon-graphs/issues",
  "scripts": {
    "build": "webpack --config ./build/webpack/webpack.config.js --env.TYPE=LIB",
    "build:dist": "webpack --config ./build/webpack/webpack.config.js --env.TYPE=DIST",
    "build:site": "npm run docs && webpack --config ./build/webpack/site.webpack.js --env.TYPE=SITE",
    "clean": "rimraf dist lib",
    "deploy:site": "npm run build:site && gh-pages -d .site -m \"Upgrade: Deploy site\"",
    "dev": "node ./build/webpack/dev-server.js",
    "docs": "node_modules/.bin/jsdoc -c jsdoc.json",
    "lint:styles": "stylelint src/main/less/**/*.less",
    "lint:source": "eslint src dev --color --max-warnings 0",
    "lint": "npm run lint:source && npm run lint:styles",
    "lint:fix": "eslint src --color --fix",
    "prepublish": "in-publish && npm run clean && npm run build && npm run build:dist || not-in-publish",
    "release:patch": "fusion-make patch --ec-profile npm --no-pom",
    "release:minor": "fusion-make minor --ec-profile npm --no-pom",
    "release:major": "fusion-make major --ec-profile npm --no-pom",
    "style": "prettier \"src/**/*.*\" \"dev/**/*.*\" \"docs/**/*.md*\" --write",
    "test": "karma start ./build/karma/karma.config.js --single-run --no-auto-watch",
    "test:persist": "karma start ./build/karma/karma.config.js --no-single-run"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-classes": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/runtime": "^7.4.5",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-istanbul": "^5.1.3",
    "babel-plugin-minify-replace": "^0.5.0",
    "babel-preset-minify": "^0.5.0",
    "carbon-site-helpers": "^1.3.1",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.7",
    "docdash": "^1.1.1",
    "eslint": "^5.16.0",
    "eslint-plugin-ideal": "^0.1.3",
    "fusion-make": "^1.9.1",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.1",
    "in-publish": "^2.0.0",
    "jasmine-core": "^3.4.0",
    "jsdoc": "^3.5.5",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "loader-utils": "^1.2.3",
    "mini-css-extract-plugin": "^0.6.0",
    "one-cerner-style-icons": "github:cerner/one-cerner-style-icons",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "puppeteer": "^1.17.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.3",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "svg-to-carbon": "^1.1.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.1",
    "webpack-merge": "^4.1.5"
  },
  "dependencies": {
    "c3": "^0.4.23",
    "d3": "^3.5.17"
  },
  "files": [
    "dist",
    "lib",
    ".npmrc",
    "README.md"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "browserslist": [
    "Android >= 4",
    "Chrome >= 35",
    "Firefox >= 31",
    "Explorer >= 9",
    "iOS >= 7",
    "Safari >= 7.1"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run style && git add -u",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "tabWidth": 2,
          "printWidth": 250
        }
      }
    ]
  }
}
